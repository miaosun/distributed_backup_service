package mchannels;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.UnknownHostException;

public abstract class MulticastChannel extends Thread {

	public final int PORT = 1200; 
	public final String adr = new String("230.0.0.1");
	
	public MulticastChannel() throws IOException {
		super("MulticastChannel");
	}
	
	public void receivePacket() {
		
	}
	
	public void sendPacket() {
		
	}
	
	public void run() {
		DatagramSocket socket; 
		DatagramPacket packet; 
		InetAddress address; 
		
		try {
			address = InetAddress.getByName(adr);
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		socket = new DatagramSocket(); 
	}

}
